/**
 * This injects Tailwind's base styles, which is a combination of
 * Normalize.css and some additional base styles.
 *
 * You can see the styles here:
 * https://github.com/tailwindcss/tailwindcss/blob/master/css/preflight.css
 *
 * If using `postcss-import`, you should import this line from it's own file:
 *
 * @import "./tailwind-preflight.css";
 *
 * See: https://github.com/tailwindcss/tailwindcss/issues/53#issuecomment-341413622
 */
@tailwind preflight;

/**
 * This injects any component classes registered by plugins.
 *
 * If using `postcss-import`, use this import instead:
 *
 * @import "tailwindcss/components";
 */
@tailwind components;

/**
 * Here you would add any of your custom component classes; stuff that you'd
 * want loaded *before* the utilities so that the utilities could still
 * override them.
 */

.rem-14 {
    font-size: 14px;
}

.font-open-sans {
    font-family: 'Open Sans', sans-serif;
}

h1 {
    @apply .mb-2
}

h2, h3, h4 {
    @apply .mt-6
}

a {
    @apply .no-underline
}

.btn {
    @apply .bg-blue .rounded .text-white .p-2 .block;
}

.tool-btn {
    @apply .btn .my-4;

    min-width: 6rem;
}

.tool-btn:hover {
    @apply .bg-blue-dark
}

.field {
    @apply .shadow .appearance-none .border .rounded .py-2 .px-3
}


/**
 * Homepage Cards
 */
.h-card {
    @apply .w-64 .m-2 .p-2 .border .rounded-lg .text-black;
}

.h-card:hover {
    @apply .bg-grey-lightest;
}

.h-card svg {
    display: inline-block;
    width:  20px;
    height: 20px;
}

.h-card-header {
    @apply .flex .items-center .justify-between .mb-2;
}

.h-card-title {
    @apply .m-0;
}


/**
 * This injects all of Tailwind's utility classes, generated based on your
 * config file.
 *
 * If using `postcss-import`, you should import this line from it's own file:
 *
 * @import "./tailwind-utilities.css";
 *
 * See: https://github.com/tailwindcss/tailwindcss/issues/53#issuecomment-341413622
 */
@tailwind utilities;

/**
 * Here you would add any custom utilities you need that don't come out of the
 * box with Tailwind.
 */


#hamburger-menu {
    position: fixed;
    width: 200px;
    height: 100%;

    top: 0;
    right: -300px;

    transition: all 0.2s linear;
}

#hamburger-menu.hamburger-visible {
    right: 0;
}

/*
 * Button in the header for opening the hamburger
 */
#hamburger-opener {
    @apply .cursor-pointer .select-none;
}

/*
 * Button in the hamburger for closing the hamburger
 */
#hamburger-closer {
    @apply .cursor-pointer .select-none;
    position: absolute;
    top: 0;
    left: 0;
    line-height: 1;
    padding: 8px;
}


/*
 * Element where files can be dragged and dropped.
 */
.drop-container {

}

/*
 * Gets added when files enter the dropzone.
 */
.dropzone-active {

}

#dropzone-error,
.dropzone-instructions {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    background-color: rgba(218, 225, 231, 0.7);
}

/*
 * Should be hidden when ".dropzone-active" is not present.
 */
.dropzone-active .dropzone-instructions {
    display: flex;
}

.spin {
    animation: spin 3.5s linear infinite;
}

.spin-steps-8 {
    animation: spin 1250ms steps(8, end) infinite
}

@keyframes spin { 100% { -webkit-transform: rotate(360deg); transform:rotate(360deg); } }
